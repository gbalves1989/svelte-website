generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  products  Product[]

  @@index([name])
  @@map("categories")
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  image       String
  idCategory  String

  category    Category @relation(fields: [idCategory], references: [id])

  @@index([name])
  @@map("products")
}
